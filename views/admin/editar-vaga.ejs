
<%- include('header') %>
    

<h2>
    Editar Vaga: 
    <span><a href="/admin/vagas">Vagas</a></span>
</h2>
<div>
    <form method="post">
        <label> Título:</label>
        <input type="text" name="titulo" value="<%= vaga.titulo %>"><br>
        <label> Descrição:</label>
        <textarea name="descricao"><%= vaga.descricao %></textarea><br>
        <label> Categoria:</label>
        <select name="categoria">
            <% categorias.forEach(categoria => { %>
                <option value="<%= categoria.id %>" <% if(categoria.id==vaga.categoria){ %> selected <% } %>><%= categoria.categoria %></option>                
            <% }) %>
        </select><br>
        <button name="salvar">Salvar vaga</button>
    </form>
</div>
<%- include('footer') %>